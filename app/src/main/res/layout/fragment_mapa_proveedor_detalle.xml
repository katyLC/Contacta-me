            android:maxLines="1"
            android:text="Nombre: "
            android:textStyle="bold"
            android:textAlignment="viewStart"
            android:textColor="@color/colorTextLight"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@id/bt_ver_perfil"
            app:layout_constraintStart_toEndOf="@+id/iv_foto_proveedor"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_calificacion_promedio"
