            android:text=""
            android:textAlignment="viewStart"
            android:textColor="@color/colorTextLight"
            android:textSize="@dimen/font_body_s_size"
            app:layout_constraintStart_toEndOf="@+id/iv_foto_proveedor"
            app:layout_constraintTop_toBottomOf="@+id/tv_nombre_proveedor"/>

        <ImageView
            android:id="@+id/iv_calificacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintStart_toEndOf="@+id/tv_calificacion_promedio"
            app:layout_constraintTop_toBottomOf="@+id/tv_nombre_proveedor"
            app:srcCompat="@drawable/ic_star_yellow_600_24dp"/>

        <TextView
            android:id="@+id/tv_calificacion_cantidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/roboto"
