                                android:textSize="@dimen/font_body_size"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/imageView54"
                                app:layout_constraintTop_toBottomOf="@+id/tv_dias_atencion"/>

                            <TextView
                                android:id="@+id/tv_horario_atencion"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginEnd="8dp"
                                android:fontFamily="@font/roboto"
                                android:text=""
                                android:textAlignment="viewStart"
                                android:textColor="@color/md_blue_600"
                                android:textSize="@dimen/font_body_size"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/imageView54"
                                app:layout_constraintTop_toBottomOf="@+id/textView78"/>

                            <ImageView
                                android:id="@+id/imageView55"
                                android:layout_width="20dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="24dp"
                                android:layout_marginTop="16dp"
                                android:tint="@color/md_grey_600"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/tv_horario_atencion"
